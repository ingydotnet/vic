PIC P16F690;

config debounce count = 2;
config debounce delay = 1ms;
config adc right_justify = 0;

Main {
    digital_output PORTC;
    digital_input RA3;
    analog_input RA0;
    # adc_enable clock, channel
    adc_enable 500kHz, AN0;
    $display = 0x08; # create a 8-bit register
    $dirxn = FALSE;
    Loop {
        write PORTC, $display;
        adc_read $userval;
        $userval += 100;
        delay_ms $userval;
        debounce RA3, Action {
            $dirxn = !$dirxn;
        };
        if $dirxn == TRUE, {
            rol $display, 1;
        }, {
            ror $display, 1;
        };
    }
}
