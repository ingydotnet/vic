PIC P16F690;

# enable gpsim as a simulator
pragma simulator gpsim;

Main {
    digital_output RA0; # mark pin RA0 as output
    write RA0, 0x1; # write the value 1 to RA0
    sim_assert RA0 == 0x1, "Pin RA0 should be 1";
}

Simulator {
    attach_led RA0;
    stop_after 1s;
    logfile "helloworld.lxt";
    log RA0;
    scope RA0;
}
